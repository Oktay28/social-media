<%- include('./partials/header') %>
<%- include('./partials/headerBlock') %>

<main class="position-relative">
    <div id="main-block">
        <h2 class="text-center mt-3">Change Password</h2>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form method="POST" id="post-publication">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="alert alert-danger fade mb-4" role="alert">
                                    <h4 class="alert-heading">New passwords do not match!</h4>
                                  </div>
                                <div class="form-group">
                                    <label for="password" class="col-form-label">Current Password</label>
                                    <input type="password" name="password" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="new-password" class="col-form-label">New Password</label>
                                    <input type="password" name="newPassword" id="new-password"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="repeat-new-password" class="col-form-label">Repeat New Password</label>
                                    <input type="password" class="form-control" id="repeat-new-password"
                                        name="repeatNewPassword">
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-success check-second-password" type="submit">
                                        Edit
                                    </button>
                                </div>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/publicationModals') %>
<%- include('./partials/footer') %>